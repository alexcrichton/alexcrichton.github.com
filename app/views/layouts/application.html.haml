!!! 5
%html

  %head
    %link{ :rel => 'shortcut icon', :href => '/favicon.ico' }
    %meta{ :charset => "utf-8" }/
    %meta{ :name => 'description', :content => "Alex Crichton's portfolio website" }/
    %meta{ :name => 'author', :content => "Alex Crichton" }/
    %meta{ :name => 'keywords', :content => "alex crichton, portfolio" }/

    %title alexcrichton.com
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'jquery', 'application'
  %body
    #container.name
      = yield
    - if Rails.env.production?
      %script{:type => "text/javascript"}
        var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
        document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
      %script{:type => "text/javascript"}
        try {
        var pageTracker = _gat._getTracker("UA-7218359-7");
        pageTracker._trackPageview();
        } catch(err) {
        }

